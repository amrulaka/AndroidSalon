<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewFragment.SelesaiFragment">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_proses"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/table_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="13dp"
                        android:paddingTop="10dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="10dp"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txt_waktu_pelanggan"
                            app:autoSizeTextType="uniform"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="25"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:text="Waktu"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/txt_customer"
                            app:autoSizeTextType="uniform"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:text="Customer"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/txt_stylish"
                            app:autoSizeTextType="uniform"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:text="Stylish"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/txt_biaya"
                            app:autoSizeTextType="uniform"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="25"
                            android:fontFamily="serif"
                            android:singleLine="true"
                            android:text="Biaya"
                            android:textSize="20sp"
                            android:textStyle="bold|italic" />
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>