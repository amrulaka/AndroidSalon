<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/layout_layanan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/image_layanan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/spa"/>

        <TextView
            android:id="@+id/txt_layanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="Perawatan Tubuh"
            android:singleLine="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/image_layanan"
            android:layout_toRightOf="@+id/image_layanan"
            android:layout_marginLeft="12dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>